# .env.example
# Copy this file to .env and fill in your values

# Required: Anthropic API key
CLAUDE_API_KEY=your-anthropic-api-key-here

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_LOG_LEVEL=INFO

# API configuration
API_AUTH_ENABLED=false
API_API_KEY=your-api-key-here
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=100

# Claude SDK configuration
CLAUDE_DEFAULT_MODEL=
CLAUDE_BASE_URL=
CLAUDE_MAX_TURNS=50

# Session configuration
SESSION_MAX_CONCURRENT=10
SESSION_IDLE_TIMEOUT_SECONDS=1800
SESSION_CLEANUP_INTERVAL_SECONDS=300

# Task configuration
TASK_DEFAULT_TIMEOUT_SECONDS=3600
TASK_MAX_QUEUE_SIZE=100

# Storage configuration
STORAGE_TYPE=memory
STORAGE_REDIS_HOST=localhost
STORAGE_REDIS_PORT=6379
STORAGE_REDIS_DB=0
STORAGE_REDIS_PASSWORD=

# Monitoring configuration
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_LOGGING_FORMAT=json

# Docker compose workspace path
WORKSPACE_PATH=./workspaces
